{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    /* 路徑別名設定 */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    // "allowImportingTsExtensions": true, // 移除這行，避免衝突
    "resolveJsonModule": true,
    "isolatedModules": true,
    
    /* 輸出設定：解決 TS5055 和 TS5096 */
    "emitDeclarationOnly": true, // 只產出 .d.ts
    "declaration": true,         // 確保開啟宣告檔產出
    "outDir": "./dist",          // 將產出檔案放到 dist，避免覆寫原始檔
    
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"]
}